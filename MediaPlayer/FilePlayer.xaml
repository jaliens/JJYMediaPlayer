<UserControl x:Class="MediaPlayer.FilePlayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MediaPlayer"
             xmlns:customControl="clr-namespace:Common.CustomControl;assembly=Common"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Image 
            Name="img_videoImage"
            Grid.Row="0"/>
        <Grid
            Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button
                Grid.Column="0"
                Visibility="Collapsed"
                BorderThickness="0"
                Content="SDL▶"
                Click="OnPlayWithSDLButtonClick"/>
            <Button
                x:Name="btn_stop"
                Grid.Column="1"
                BorderThickness="0"
                Content="■"
                Click="OnPlayWithSDLButtonClick"/>
            <Button
                x:Name="btn_pause"
                Grid.Column="2"
                BorderThickness="0"
                Visibility="Hidden"
                Content="∥"
                Click="OnPauseButtonClick"/>
            <Button
                x:Name="btn_play"
                Grid.Column="2"
                BorderThickness="0"
                Content="▶"
                Click="OnPlayButtonClick"/>
            <Slider 
                x:Name="slider_video"
                Visibility="Collapsed"
                Grid.Column="3"
                VerticalAlignment="Center"
                PreviewMouseUp="OnVideoSliderMouseUp"/>
            <customControl:MediaProgressBar 
                x:Name="mediaProgressBar"
                Grid.Column="3"
                VerticalAlignment="Center"
                HorizontalAlignment="Stretch"
                Margin="20 0 20 0"
                Height="10"
                Background="#333333"
                BufferBrush="#777777"
                ThumbRadius="10"
                ThumbBrush="DarkOrange"
                Minimum="0"
                Maximum="100"/>
        </Grid>
        <Grid
            Grid.Row="2">
            <customControl:Test
                Maximum="100"
                Minimum="0"
                Value="50"/>
        </Grid>
    </Grid>
</UserControl>
